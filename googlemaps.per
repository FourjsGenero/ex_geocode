LAYOUT (TEXT="Genero Google Maps Example")
HBOX
VBOX
GROUP (TEXT="Office")
GRID
{
Click flag to select office, or enter address manually
[a:b:c:d:e:f:g:h:i:j                                                         ]
}
END #GRID
END #GROUP
GROUP (TEXT="Address")
GRID
{
Address [a01                                     ]
        [a02                                     ]
City    [a03                                     ]
State   [a04                                     ]
Country [a05                                     ]
Postcode[a06                                     ]
Lat/Long[a07                                     ]
        [b01                                     ]
        [b02                                     ]
}
END #GRID
END #GROUP
END #VBOX

GROUP (TEXT="Map")
GRID
{
Zoom In  [i01                                         ]
    [z01][                                            ]
    [   ][                                            ]
    [   ][                                            ]
    [   ][                                            ]
    [   ][                                            ]
    [   ][                                            ]
    [   ][                                            ]
    [   ][                                            ]
Zoom Out [                                            ]
}
END #GRID
END #GROUP
END #HBOX
END #LAYOUT
ATTRIBUTES

IMAGE a : a, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=60 PIXELS, IMAGE="france.png";#, ACTION=france;
IMAGE b : b, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=60 PIXELS, IMAGE="uk.png";#, ACTION=uk;
IMAGE c : c, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=60 PIXELS, IMAGE="usa.png";#, ACTION=usa;
IMAGE d : d, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="germany.png";#, ACTION=germany;
IMAGE e : e, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="italy.png";#, ACTION=italy;
IMAGE f : f, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="spain.png";#, ACTION=spain;
IMAGE g : g, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="mexico.png";#, ACTION=mexico;
IMAGE h : h, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="australia.png";#, ACTION=australia;
IMAGE i : i, SIZEPOLICY=FIXED, AUTOSCALE, WIDTH=60 PIXELS, HEIGHT=40 PIXELS, IMAGE="new_zealand.png";#, ACTION=nz;
