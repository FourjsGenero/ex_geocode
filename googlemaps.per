EDIT a01 = formonly.address1;
EDIT a02 = formonly.address2;
EDIT a03 = formonly.city;
EDIT a04 = formonly.state;
EDIT a05 = formonly.country;
EDIT a06 = formonly.postcode;
EDIT a07 = formonly.latlong;
BUTTON b01 : getdetails, TEXT="Get Latitude/Longitude";
BUTTON b02: drawmap, TEXT="Draw Map";

IMAGE i01 = formonly.url, WIDTH=512 PIXELS, HEIGHT=512 PIXELS, SIZEPOLICY=FIXED;
SLIDER z01 = formonly.zoom, VALUEMIN=1, VALUEMAX=19, ORIENTATION=VERTICAL;

